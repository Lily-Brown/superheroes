<div class='col-md-8 col-md-offset-2 sub-header'>
  <p><h2><%= @superpower.name.upcase %></h2></p>
  <p><strong>Description</strong>: <%= @superpower.description %></p>
</div>
<div class='col-md-8 col-md-offset-2'>
  <% if @superheroes.count > 0 %>
    <p><h2>Superheroes that have this power:</h2></p>
    <% @superheroes.each do |superhero| %>
      <p><h3><%= link_to superhero.name, team_superhero_path(superhero.team, superhero) %></h3></p>
    <% end %>
  <% end %>
</div>

<div class='col-md-8 col-md-offset-2'>
  <p><%= button_to 'ADD TO '+@superhero.name.upcase, superhero_superpowers_path(@team,@superhero,@superpower), 
          method: :post %></p>
</div>

<div class='col-md-8 col-md-offset-2'>
  <p></br><%= link_to 'BACK TO SUPERPOWERS', superpowers_path %></p>
</div>
<div class='col-md-8 col-md-offset-2 sub-header'>
  <p><%= button_to 'EDIT', edit_superpower_path, method: :get, class: 'button' %></p>
  <p><%= button_to 'DELETE', superpower_path(@superpower), method: :delete, 
        data: {confirm: "Are you sure you want to delete this Superpower?"}, 
        class: 'button' %></p>
</div>