<div>
  <p><h2><%= @team.name %></h2></p>
  <p><strong>Publisher</strong>: <%= @team.publisher %></p>
</div>
<div>
  <% @superheroes.each do |superhero| %>
  <p><h3><%= link_to superhero.name, team_superhero_path(@team,superhero) %></h3></p>
  <p><strong>True Identity</strong>: <%= superhero.true_identity %></p>
  <% end %>
</div>
<div
  <p><%= link_to 'Add New Superhero', new_team_superhero_path(@team) %></p>
  <%= button_to 'EDIT', edit_team_path, method: :get %>
  <%= button_to 'DELETE', team_path(@team), method: :delete, data: {confirm: "Are you sure you want to delete this Team?"} %>
</div>